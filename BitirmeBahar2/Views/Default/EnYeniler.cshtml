@model IEnumerable<BitirmeBahar2.Models.Makale>
@{
    Layout = null;
}
        @foreach (var item in Model)
        {
            <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@item.Baslik</h5>
                    <small class="text-muted">@String.Format("{0:dd MMMM yyyy}", item.Tarih)</small>
                </div>
                <p class="mb-1"></p>
                <small class="text-muted">@item.Uye.KullaniciAdi</small>
                <span class="badge badge-primary badge-pill" style="float:right; background-color:#007b5e;">@item.Okunma</span>
            </a>
        }
